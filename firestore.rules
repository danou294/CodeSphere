rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles temporaires plus permissives pour le développement
    // TODO: Restreindre en production
    
    // Règles pour la collection users - Permettre tout pour les utilisateurs authentifiés
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Règles pour les projets
    match /projects/{projectId} {
      allow read, write: if request.auth != null;
    }
    
    // Règles pour les sessions de chat
    match /chatSessions/{sessionId} {
      allow read, write: if request.auth != null;
    }
    
    // Règles pour les messages
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Règles pour toutes les autres collections (temporaire)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
